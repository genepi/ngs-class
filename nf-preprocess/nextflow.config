manifest {
    name                                  = 'nf-preprocess'
    version                               = '0.2'
    description                           = 'Nextflow pipeline to preprocess fastq data'
    author                                = 'Sebastian SchÃ¶nherr'
    homePage                              = 'https://github.com/genepi/ngs-class'
    mainScript                            = 'main.nf'
    nextflowVersion                       = '!>=21.04.0'
}

// Global default params, used in configs
params {
    //Required inputs
    input                          = null
    output                         = null
}

profiles {
    docker.enabled                    = true
    singularity.enabled               = false
    process.container                 = 'quay.io/genepi/ngs-class:v0.2'
 

    development {
        process.container                 = 'genepi/ngs-class'
    }

    singularity {
        process.container                 = '/mnt/genepi-lehre/teaching/ngs/singualarity/quay.io-genepi-ngs-class-v0.1.img'
        singularity.enabled               = true
        docker.enabled                    = false
    }

   test      {
        includeConfig 'conf/test.config'
   }

}
